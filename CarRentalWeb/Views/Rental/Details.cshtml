@model VehicleRentalWeb.Models.Rental

@{
    ViewData["Title"] = "Rental Details";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-lg border-0 p-4 mb-4 bg-light">
    <div class="row g-4">
        <div class="col-md-6">
            <h4 class="text-primary mb-3">Rental Summary</h4>
            <p><strong>Customer:</strong> @Model.CustomerName</p>
            <p><strong>Vehicle:</strong> @Model.VehicleName</p>
            <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
            <p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
        </div>

        <div class="col-md-6">
            <h4 class="text-primary mb-3">Payment Info</h4>
            <p><strong>Total Cost:</strong> $@Model.TotalCost.ToString("0.00")</p>
            <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Completed")</p>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-controller="Rental" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>
