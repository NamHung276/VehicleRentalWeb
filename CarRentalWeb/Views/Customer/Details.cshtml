@model VehicleRentalWeb.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-lg border-0 p-4 mb-4 bg-light">
    <div class="row g-4">
        <div class="col-md-4 text-center">
            <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? Url.Content("~/images/default_customer.jpg") : Url.Content(Model.ImagePath))"
                 alt="@Model.Name"
                 class="img-fluid rounded-circle border shadow-sm"
                 style="max-width: 220px;" />
        </div>

        <div class="col-md-8">
            <h4 class="mb-3 text-primary">@Model.Name</h4>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Address:</strong> @Model.Address</p>

            <div class="mt-4">
                <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
