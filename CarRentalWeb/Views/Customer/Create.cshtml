@model VehicleRentalWeb.Models.Customer

@{
    ViewData["Title"] = "Add New Customer";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <form asp-controller="Customer" asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="ImagePath" class="form-label"></label>
            <input asp-for="ImagePath" class="form-control" placeholder="/images/customer1.jpg" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RegistrationType" class="form-label"></label>
            <select asp-for="RegistrationType" class="form-select"
                    asp-items="Html.GetEnumSelectList<VehicleRentalWeb.Models.RegistrationType>()"></select>
            <span asp-validation-for="RegistrationType" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Customer</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
