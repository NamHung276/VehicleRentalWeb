@model IEnumerable<VehicleRentalWeb.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h2 class="text-center mb-4 fw-bold text-primary">@ViewData["Title"]</h2>

<div class="text-center mb-4">
    <a asp-controller="Customer" asp-action="Create" class="btn btn-success btn-lg me-2">Add New Customer</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Home</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var customer in Model)
    {
        <div class="col">
            <div class="car-card shadow-sm">
                <img src="@(string.IsNullOrEmpty(customer.ImagePath) ? "/images/default_customer.jpg" : customer.ImagePath)"
                     alt="@customer.Name"
                     class="car-image" />

                <div class="car-info">
                    <h5 class="car-name">@customer.Name</h5>
                    <p class="car-details">@customer.Email</p>
                    <p class="car-details">@customer.Phone</p>
                    <p class="car-details">@customer.Address</p>

                    <div class="car-footer d-flex justify-content-between align-items-center">
                        <a asp-controller="Customer" asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-primary">View</a>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-5">No customers found.</div>
}
