@model IEnumerable<VehicleRentalWeb.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicle Catalog";
}

<h2 class="text-center mb-4 fw-bold text-primary">@ViewData["Title"]</h2>

<div class="text-center mb-4">
    <a asp-controller="Vehicle" asp-action="Create" class="btn btn-success btn-lg me-2">Add New Vehicle</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to Home</a>
</div>

<!-- Vehicle Grid Section -->
<div class="row row-cols-1 row-cols-md-3 g-4 car-grid">
    @foreach (var car in Model)
    {
        <div class="col">
            <div class="car-card shadow-sm">
                <img src="@(string.IsNullOrEmpty(car.ImagePath) ? "/images/default_car.jpg" : car.ImagePath)"
                     alt="@car.Make @car.Model"
                     class="car-image" />

                <div class="car-info">
                    <h5 class="car-name">@car.Make @car.Model</h5>
                    <p class="car-details">@car.Year • @car.Color</p>
                    <p class="car-details">Supplier: @car.Supplier</p>
                    <div class="car-footer d-flex justify-content-between align-items-center">
                        <span class="price">$@car.RatePerDay.ToString("0.00") / day</span>
                        <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-outline-primary">View</a>
                        <a asp-controller="Vehicle" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-5">No vehicles available at the moment.</div>
}
