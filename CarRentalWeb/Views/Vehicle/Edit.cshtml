@model VehicleRentalWeb.Models.Car

@{
    ViewData["Title"] = "Edit Vehicle";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Make" class="form-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="Year" class="form-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="Color" class="form-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="RatePerDay" class="form-label"></label>
                <input asp-for="RatePerDay" class="form-control" />
                <span asp-validation-for="RatePerDay" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Supplier" class="form-label"></label>
            <input asp-for="Supplier" class="form-control" />
            <span asp-validation-for="Supplier" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Current Image</label>
            <div class="mb-2">
                <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? Url.Content("~/images/default_car.jpg") : Url.Content(Model.ImagePath))"
                     alt="@Model.Make @Model.Model"
                     class="img-thumbnail" style="max-width:260px;" />
            </div>

            <label class="form-label">Upload New Image (optional)</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsAvailable" class="form-check-input" />
            <label asp-for="IsAvailable" class="form-check-label"></label>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-controller="Vehicle" asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
